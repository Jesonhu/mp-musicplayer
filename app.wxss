page{
  color: #555;
  font: 32rpx/1.5 FZLTXIHJW--GB1-0,"hiragino sans gb","Helvetica Neue",Helvetica,STHeiTi,Arial,sans-serif;
  background: #f4f4f4;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.clearfix {
  clear:both;
  height: 0;
  overflow: hidden;
}
.clearfix:after{
  content: '';
  display: block;
  height:0;
  clear: both;
  visibility: hidden;
}

.bg_mask{
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  z-index: 2;
  width:100%;
  background-color:rgba(0,0,0,.3);
}
.bg_blur{
  -webkit-filter: blur(30rpx);
  -webkit-transform: scale(1.15);
}
.ear_icon::before{
  display:inline-block;
  margin-right:6rpx;
  content:'';
  width:20rpx;
  height:20rpx;
  background:url(data:image/png;base64,) no-repeat;
  background-size:contain;
}


