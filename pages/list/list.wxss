    bottom:0;
    left:0;
    z-index: 3;
    width:100%;
    color:#fff;
}
#cblistheader .focus-body .focus-info{
    display:-webkit-box;
    margin: 0 30rpx 50rpx;
}
#cblistheader .focus-body .focus-info .focus-text{
    -webkit-box-flex: 1;
}
#cblistheader .focus-body .focus-info .focus-text .focus-tit{
