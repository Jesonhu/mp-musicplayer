/* cblist */
.border_t{
    position: relative;
    padding: 0 0 0 20rpx;
}
.border_t::before{
    content:'';
    position: absolute;
    z-index: 1;
    top:0;
    left:0;
    right:0;
    border-width:0 0 1rpx 0;
    pointer-events: none;
    border-style: solid;
    border-color: rgba(255,255,255,0.15);
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.border_t::after,
.border_b::after{
    content:'';
    position: absolute;
    z-index: 1;
    bottom:0;
    left:0;
    right:0;
    border-width:0 0 2rpx 0;
    pointer-events: none;
    border-style: solid;
    border-color: rgba(255,255,255,0.15);
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.border_b{
    position: relative;
}
.songlist-item{
    padding:10rpx 0;
    margin-left: 10rpx;
    color:#fff;
}
.songlist-item .songlist-title{
    line-height: 44rpx;
    font-size:36rpx;
    font-weight: 400;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.songlist-item .songlist-desc{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap:nowrap;
    padding-left:12rpx;
    color:rgba(255,255,255,.6);
    font-size:28rpx;
}
.songlist-item .songlist-desc .songlist-singer{
    display:block;
    white-space: nowrap;
}
.songlist-item .songlist-desc .album{
    display:block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

